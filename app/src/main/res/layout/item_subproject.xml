<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/nsb"
            android:text="프로젝트 이름"
            android:id="@+id/tv_subproject_title"
            android:textColor="@color/black"
            android:textSize="20dp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nsb"
            android:text="0000-00-00"
            android:textSize="15dp"
            android:id="@+id/tv_subproject_startdate"></TextView>
        ></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Progress"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/nsb"
            ></TextView>
        <ProgressBar
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_marginLeft="10dp"
            android:layout_weight="9"
            android:min="0"
            android:max="100"
            android:id="@+id/pb_subproject_progress"
            ></ProgressBar>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/nsb"
            android:layout_weight="1"
            android:text="0%"
            android:textAlignment="center"
            android:textSize="18dp"
            android:id="@+id/tv_subproject_progressper"
            ></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deadline"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/nsb"
            ></TextView>
        <ProgressBar
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_marginLeft="10dp"
            android:layout_weight="9"
            android:min="0"
            android:max="100"
            android:progressTint="@color/red"
            android:id="@+id/pb_subproject_deadline"
            ></ProgressBar>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/nsb"
            android:layout_weight="1"
            android:text="0%"
            android:textAlignment="center"
            android:textSize="18dp"
            android:id="@+id/tv_subproject_deadlineper"
            ></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="total task\n10"
            android:textSize="15dp"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_weight="1"
            android:id="@+id/tv_subproject_totaltask"
            ></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Weight\n10"
            android:textSize="15dp"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_weight="1"
            android:id="@+id/tv_subproject_weight"
            ></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Deadline\n0000-00-00"
            android:textSize="15dp"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_weight="1"
            android:id="@+id/tv_subproject_deadline"
            ></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modify"
            android:backgroundTint="@color/blue"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:id="@+id/bt_subproject_modify"
            ></Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:backgroundTint="@color/red"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:id="@+id/bt_subproject_delete"
            ></Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="info"
            android:backgroundTint="@color/black"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:id="@+id/bt_subproject_info"
            ></Button>
    </LinearLayout>
</LinearLayout>